{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="container-fluid">
<h1 class="mb-5 text-center">Announces Management</h1>
<table class=" table table-hover">
    <thead>
        <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Author</th>
        <th class="text-center">Reservation</th>
        <th class="text-center">Rating</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for ad in ads %}
        <tr>
        <td>{{ ad.id }}</td>
        <td>{{ ad.title }}</td>
        <td>
            <img src="{{ ad.author.picture }}" alt="Image of {{ ad.author.fullName }}" class="avatar avatar-micro mr-2">
            {{ ad.author.fullName }}
        </td>
        <td class="text-center">
           <span class="badge badge-info rounded"> {{ ad.bookings | length }}</span>
        </td>
        <td class="text-center">
            <span class="badge badge-info rounded">{{ ad.avgRatings | number_format(1, ',', '')}}</span>
        </td>
        <td>
            <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
            <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
        </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
