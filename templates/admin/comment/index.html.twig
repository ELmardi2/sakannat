{% extends 'admin/base.html.twig' %}

{% block title %}Comments Management !{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="text-center">Gestion of comments</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Author</th>
                    <th>Comment</th>
                    <th>Announce</th>
                    <th>Rating</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.createdAt | date('d/m/Y H:i') }}</td>
                <td>{{ comment.author.fullName }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.ad.title }}</td>
                <td>
                    <span class="badge badge-dark">{{ comment.rating }}</span>
                </td>
                <td>
                    <a href="{{ path('admin_comments_edit', {'id':comment.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
            <a href="{{ path('admin_comment_delete', {'id':comment.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
