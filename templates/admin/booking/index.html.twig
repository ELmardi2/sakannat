{% extends 'admin/base.html.twig' %}

{% block title %}Reservations Management !{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion Of Reservations As Admin</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Booker</th>
                    <th>Announce</th>
                    <th>Duration</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.createdAt| date('d/m/Y H:i') }}</td>
                <td><img src="{{ booking.booker.picture }}" alt="" class="avatar avatar-micro">{{ booking.booker.fullName }}</td>
                <td>{{ booking.ad.title }}</td>
                <td>{{ booking.getDuration() }}</td>
                <td>{{ booking.amount }}/SDN</td>
                <td>
                    <a href="{{ path('admin_booking_edit', {'id':booking.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('admin_booking_delete', {'id':booking.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
