{% extends 'base.html.twig' %}

{% block title %}Announce's page!{% endblock %}

{% block body %}
<div class="container">
    <h1 class=" my-3 text-center">Welcome to you in the main announces's page <br>مرحبًا بك في صفحة الإعلانات الرئيسية</h1>
    <div class="row">
    {% for ad in ads %}

    {% set url = path('ads_show', {'slug': ad.slug}) %}
            <div class="col-md-4">
                <div class="card bg-light mb-4">
                    <div class="card-header text-center">
                        {{ ad.rooms }} Rooms -  <strong>{{ ad.price }} $!/night</strong><br>
                        <small>Not available yet</small>
                    </div>
                    <a href="{{ url }}">
                    <img src="{{ ad.coverImage }}" alt="Image of appartement" style="height:200px width: 100% display: block">
                    </a>
                </div>
                <div class="card-body">
                 <h4 class="card-title">
                    <a href="{{ url }}">
                        {{ ad.title }}
                    </a>
                 </h4>
                    <p class="card-text">{{ ad.introduction }}  </p>
                    <a href="{{url}}" class="btn btn-primary">Read More+</a>
                </div>
            </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
