{% extends 'base.html.twig' %}

{% block title %}Create your announce {% endblock %}

{% form_theme  form '/ad/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-5 ">Create And Add Your Announce Here <br>انشاء واضف اعلانك هنا</h1>

        {# Render the form here#}
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
            <div class="alert alert-light">
            <h2>Genral informations</h2>
            <hr>
            {{ form_row(form.title) }}
            {{ form_row(form.slug) }}
            {{ form_row(form.price) }}
            {{ form_row(form.rooms) }}
            </div>
            <div class="alert alert-light">
                <h2>The Details of announce</h2>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}
            </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                <h2>Images Of The Announce</h2>
                {{ form_row(form.coverImage) }}
                {{ form_row(form.images) }}
            </div>
            </div>
        </div>

           <div class="alert alert-success clearfix">
            <h2>Save My Announce</h2>
                <p>You Are About To Create Your Announce We Are Very Proud Of You :)</p>
                <button type="submit" class="btn btn-primary float-right">
                <i class="fas fa-check"></i>
                    Create your announce </button>
           </div> 
        {{ form_end(form) }}
    </div>
    
{% endblock %}

 {% block javascripts %}
    <script src="/js/ad.js">  </script>
 {% endblock %}