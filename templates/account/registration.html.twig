{% extends 'base.html.twig' %}

{% block title %}Account-regisration{% endblock %}

{% block body %}
    <div class="container">
       <h1 class="text-center my-5">Create your account in our website !</h1>

       {{ form_start(form) }}
          <div class="row">
        <div class="col">
        <div class="alert alert-light">
            <h2 class="alert-heading">My Information General</h2>
            <hr>
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.picture) }}
        </div>
         <div class="alert alert-light">
            <h2 class="alert-heading">Password</h2>
            <hr>
            {{ form_row(form.hash) }}
             {{ form_row(form.confirmPassword) }}
        </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2 class="heading">Details</h2>
                <hr>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}
                <hr>
                <p> You Are About finish Your inscription and Join Us</p>
                <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i>
                Confirm Your Inscription
                </button>
            </div>
        </div>
       </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
